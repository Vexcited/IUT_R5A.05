{% extends 'base.html.twig' %}

{% block title %}Liste des jeux vidéo{% endblock %}

{% block body %}
    <h1>Liste des jeux vidéo</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Éditeur</th>
                <th>Developpeur</th>
                <th>DateSortie</th>
                <th>Prix</th>
                <th>Description</th>
                <th>ImageUrl</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jeu_video in jeu_videos %}
            <tr>
                <td>{{ jeu_video.id }}</td>
                <td>{{ jeu_video.titre }}</td>
                <td>{{ jeu_video.editeur.nom }}</td>
                <td>{{ jeu_video.developpeur }}</td>
                <td>{{ jeu_video.dateSortie ? jeu_video.dateSortie|date('Y-m-d') : '' }}</td>
                <td>{{ jeu_video.prix|number_format(2, ',') }} €</td>
                <td>{{ jeu_video.description }}</td>
                <td>{{ jeu_video.imageUrl }}</td>
                <td>
                    <a href="{{ path('app_jeu_video_show', {'id': jeu_video.id}) }}">Consulter</a>
                    <a href="{{ path('app_jeu_video_edit', {'id': jeu_video.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_jeu_video_new') }}">Ajouter un jeu</a>
{% endblock %}
