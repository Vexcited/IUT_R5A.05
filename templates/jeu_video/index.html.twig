{% extends 'base.html.twig' %} {% block title %}Liste des jeux vidéo{% endblock
%} {% block breadcrumb %}
<li class="breadcrumb-item active" aria-current="page">Jeux Vidéo</li>
{% endblock %} {% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Liste des jeux vidéo</h1>
    <a href="{{ path('app_jeu_video_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Ajouter un jeu
    </a>
</div>

{% if jeu_videos|length > 0 %}
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
    {% for jeu_video in jeu_videos %}
    <div class="col">
        <div class="card h-100 shadow-sm">
            {% if jeu_video.imageUrl %}
            <img
                src="{{ jeu_video.imageUrl }}"
                alt="{{ jeu_video.titre }}"
                class="card-img-top"
                style="height: 200px; object-fit: cover"
            />
            {% else %}
            <div
                class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                style="height: 200px"
            >
                <i
                    class="bi bi-controller"
                    style="font-size: 4rem; color: #dee2e6"
                ></i>
            </div>
            {% endif %}
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{ jeu_video.titre }}</h5>
                <p class="card-text text-muted mb-2">
                    <small>
                        <i class="bi bi-building me-1"></i
                        >{{ jeu_video.editeur.nom }}<br />
                        <i class="bi bi-tag me-1"></i>{{ jeu_video.genre.nom }}
                    </small>
                </p>
                <p class="card-text">
                    {{ jeu_video.description|slice(0, 80) }}{% if
                    jeu_video.description|length > 80 %}...{% endif %}
                </p>
                <div class="mt-auto">
                    <div
                        class="d-flex justify-content-between align-items-center mb-2"
                    >
                        <span class="badge bg-success fs-6"
                            >{{ jeu_video.prix|number_format(2, ',') }} €</span
                        >
                        <small class="text-muted">
                            {{ jeu_video.dateSortie ? jeu_video.dateSortie|date('d/m/Y') : '' }}
                        </small>
                    </div>
                    <div class="d-grid gap-2">
                        <a
                            href="{{
                                path('app_jeu_video_show', { id: jeu_video.id })
                            }}"
                            class="btn btn-sm btn-info"
                        >
                            <i class="bi bi-eye me-1"></i>Voir les détails
                        </a>
                        <a
                            href="{{
                                path('app_jeu_video_edit', { id: jeu_video.id })
                            }}"
                            class="btn btn-sm btn-warning"
                        >
                            <i class="bi bi-pencil me-1"></i>Modifier
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% else %}
<div class="alert alert-info" role="alert">
    <i class="bi bi-info-circle me-2"></i>Aucun jeu vidéo trouvé.
    <a href="{{ path('app_jeu_video_new') }}" class="alert-link"
        >Créer le premier jeu</a
    >.
</div>
{% endif %} {% endblock %}
