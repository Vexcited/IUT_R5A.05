{% extends 'base.html.twig' %} {% block title %}Détails du genre{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item">
    <a href="{{ path('app_genre_index') }}">Genres</a>
</li>
<li class="breadcrumb-item active" aria-current="page">Détails</li>
{% endblock %} {% block body %}
<h1>Détails du genre</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ genre.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ genre.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ genre.description }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ genre.actif ? "Oui" : "Non" }}</td>
        </tr>
        <tr>
            <th>Créé le</th>
            <td>
                {{ genre.createdAt ? genre.createdAt|date('Y-m-d H:i:s') : '' }}
            </td>
        </tr>
        <tr>
            <th>Modifié le</th>
            <td>
                {{ genre.updatedAt ? genre.updatedAt|date('Y-m-d H:i:s') : '' }}
            </td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_genre_index') }}">Retour à la liste</a>

<a href="{{ path('app_genre_edit', { id: genre.id }) }}">Modifier</a>

{{ include("genre/_delete_form.html.twig") }}
{% endblock %}
